{% extends 'base1.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
    <h1 class="text-center my-4">Message</h1>

    <div class="d-flex justify-content-center">
        <div class="table-responsive" style="width: 50%; max-width: 600px;">
            <table class="table table-striped table-bordered">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ message.id }}</td>
                    </tr>
                    <tr>
                        <th>Content</th>
                        <td>{{ message.content }}</td>
                    </tr>
                    <tr>
                        <th>Conversation</th>
                        <td>{{ message.conversation.id }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="{{ path('app_message_index') }}" class="btn btn-secondary">Back to list</a>
        <a href="{{ path('app_message_edit', {'id': message.id}) }}" class="btn btn-warning">Edit</a>
        {{ include('message/_delete_form.html.twig') }}
    </div>
{% endblock %}
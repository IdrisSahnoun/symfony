{% extends 'base1.html.twig' %}

{% block title %}Edit Message{% endblock %}

{% block body %}
    <h1 class="text-center my-4">Edit Message</h1>

    <div class="d-flex justify-content-center">
        <div style="width: 50%; max-width: 600px;">
            {{ form_start(form) }}
                {{ form_row(form.content) }}
                {{ form_row(form.conversation) }}
                <button class="btn btn-success">{{ button_label|default('Update') }}</button>
            {{ form_end(form) }}
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="{{ path('app_message_index') }}" class="btn btn-secondary">Back to list</a>
    </div>
{% endblock %}

{% extends 'base1.html.twig' %}

{% block title %}Message index{% endblock %}

{% block body %}
    <h1 class="text-center my-4">Message index</h1>

    <div class="d-flex justify-content-center">
        <div class="table-responsive" style="width: 80%; max-height: 70vh;">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Content</th>
                        <th scope="col">Conversation</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for message in messages %}
                    <tr>
                        <td>{{ message.id }}</td>
                        <td>{{ message.content }}</td>
                        <td>{{ message.conversation.id }}</td>
                        <td>
                            <a href="{{ path('app_message_show', {'id': message.id}) }}" class="btn btn-info btn-sm">Show</a>
                            <a href="{{ path('app_message_edit', {'id': message.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="{{ path('app_message_new') }}" class="btn btn-success">Create new</a>
    </div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Conversation{% endblock %}

{% block body %}
    <h1>Conversation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ conversation.id }}</td>
            </tr>
            <tr>
                <th>Product_id</th>
                <td>{{ conversation.productId }}</td>
            </tr>
            <tr>
                <th>Date_start</th>
                <td>{{ conversation.dateStart ? conversation.dateStart|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Message_id</th>
                <td>{{ conversation.messageId }}</td>
            </tr>
            <tr>
                <th>Participant</th>
                <td>{{ conversation.participant }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_conversation_index') }}">back to list</a>

    <a href="{{ path('app_conversation_edit', {'id': conversation.id}) }}">edit</a>

    {{ include('conversation/_delete_form.html.twig') }}
{% endblock %}

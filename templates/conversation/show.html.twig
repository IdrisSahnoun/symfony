{% extends 'base1.html.twig' %}

{% block title %}Conversation{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Conversation</h1>

        <table class="table table-striped table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ conversation.id }}</td>
                </tr>
                <tr>
                    <th>Product ID</th>
                    <td>{{ conversation.productId }}</td>
                </tr>
                <tr>
                    <th>Date Start</th>
                    <td>{{ conversation.dateStart ? conversation.dateStart|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Participant</th>
                    <td>{{ conversation.participant }}</td>
                </tr>
            </tbody>
        </table>

        <div class="mt-4">
            <a href="{{ path('app_conversation_index') }}" class="btn btn-secondary">Back to list</a>
            <a href="{{ path('app_conversation_edit', {'id': conversation.id}) }}" class="btn btn-warning">Edit</a>
            {{ include('conversation/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}  
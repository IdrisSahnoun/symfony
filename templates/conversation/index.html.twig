{% extends 'base.html.twig' %}

{% block title %}Conversation index{% endblock %}

{% block body %}
    <h1>Conversation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Product_id</th>
                <th>Date_start</th>
                <th>Message_id</th>
                <th>Participant</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for conversation in conversations %}
            <tr>
                <td>{{ conversation.id }}</td>
                <td>{{ conversation.productId }}</td>
                <td>{{ conversation.dateStart ? conversation.dateStart|date('Y-m-d') : '' }}</td>
                <td>{{ conversation.messageId }}</td>
                <td>{{ conversation.participant }}</td>
                <td>
                    <a href="{{ path('app_conversation_show', {'id': conversation.id}) }}">show</a>
                    <a href="{{ path('app_conversation_edit', {'id': conversation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_conversation_new') }}">Create new</a>
{% endblock %}

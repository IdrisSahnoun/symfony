{% extends 'backoffice.html.twig' %}

{% block title %}Edit Categorie{% endblock %}

{% block recent_orders %}{% endblock %}
{% block todos %}{% endblock %}

{% block content %}
    <div class="container mt-5">
        <h1 class="mb-4">Edit Categorie</h1>

        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            <div class="form-group row mb-3">
                {{ form_label(form.nom, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nom) }}
                </div>
            </div>
            <div class="form-group row mb-3">
                {{ form_label(form.description, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.description) }}
                </div>
            </div>
            <div class="form-group row mb-3">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </div>
        {{ form_end(form) }}

        <div class="mt-4">
            <a href="{{ path('app_categorie_index') }}" class="btn btn-secondary">Back to list</a>
            {{ include('categorie/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}